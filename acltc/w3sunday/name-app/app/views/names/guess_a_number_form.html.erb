<h1>Welcome to the Guess A Number Form</h1>
<h3>Below, please enter your guess into the field and press 'enter'</h3>

<%= form_tag '/submit_guess', method: :post do %>

  <div>
    <%= label_tag :guess %>
    <%= text_field_tag :guess %>
  </div>

  <div>
    <%= submit_tag 'Guess!' %>
  </div>

  <% end %>