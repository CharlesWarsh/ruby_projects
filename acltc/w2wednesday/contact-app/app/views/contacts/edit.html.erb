<h1>Edit A Contact</h1>

<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @contact.first_name %>
  </div>
  <div>
    <%= label_tag :middle_name %>
    <%= text_field_tag :middle_name %>
  </div>
  <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, @contact.last_name %>
  </div>
  <div>
    <%= label_tag :email_address %>
    <%= text_field_tag :email_address, @contact.email_address %>
  </div>
  <div>
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, @contact.phone_number %>
  </div>
  <div>
    <%= label_tag :bio %>
    <%= text_field_tag :bio %>
  </div>
  <div>
    <%= label_tag :street_address %>
    <%= text_field_tag :street_address %>
  </div>
  <div>
    <%= label_tag :city %>
    <%= text_field_tag :city %>
  </div>
  <div>
    <%= label_tag :state %>
    <%= text_field_tag :state %>
  </div>
  <%= submit_tag "Edit Contact" %>

<% end %>